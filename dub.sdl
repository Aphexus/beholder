license "BSL-1.0"

lflags "-L./demo/c" "-lnuklear_sdl_gl3" "-lGL" "-lSDL2"

targetPath "bin"

configuration "lib" {
	targetType "library"
}

configuration "demo" {
    targetType  "executable"
    targetName  "demoapp"
    sourcePaths "demo"
    mainSourceFile "demo/app.d"
}
