name "beholder"
description "Data viewer"
authors "drug007"
copyright "Copyright Â© 2018, drug007"
dependency "gfm:sdl2" version="~>7.0.0"
dependency "gfm:math" version="~>7.0.0"
dependency "gfm:opengl" version="~>7.0.0"
dependency "color" version="~>0.0.7"
dependency "derelict-sdl2" version="3.1.0-alpha.4"
